{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "incremental": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/*"],
      "@types/*": ["types/*"],
      "@testing": ["tests/index"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "bin/mockthereum.js"],
  "exclude": ["node_modules"]
}
