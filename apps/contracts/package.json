{
  "name": "byontio-contracts",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "forge build --optimize",
    "test": "FOUNDRY_PROFILE=contracts forge test --root ../../ -vvv",
    "test:watch": "FOUNDRY_PROFILE=contracts forge test --root ../../ --watch",
    "coverage": "FOUNDRY_PROFILE=contracts forge coverage --root ../../ --report lcov --report summary && mv ../../lcov.info ./lcov.info",
    "lint": "solhint ./src/smart-contracts/*.sol"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.8.0",
    "@openzeppelin/contracts-upgradeable": "^4.8.0"
  },
  "devDependencies": {
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0",
    "sol-merger": "^4.1.1",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5"
  }
}
