{
  "name": "contracts",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "forge build --optimize",
    "test": "forge test -vvv",
    "test:watch": "forge test --watch",
    "coverage": "forge coverage --report lcov --report summary",
    "deploy": "forge create --rpc-url $RPC_URL --private-key $PRIVATE_KEY $CONTRACT --etherscan-api-key $ETHERSCAN_API_KEY --verify",
    "lint": "solhint ./src/smart-contracts/*.sol",
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.8.0",
    "@openzeppelin/contracts-upgradeable": "^4.8.0"
  },
  "devDependencies": {
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0",
    "sol-merger": "^4.1.1",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5"
  }
}
